<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/style-login.css">
</head>
<body>
    <div class="login-wrapper">
        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form" }))
        {
            <!--<form action="" class="form">-->
            <img src="~/img/patas.png" alt="">
            <h2>Bienvenidos</h2>
            <div class="input-group">
                <input type="text" name="usuario" id="usuario">
                <label for="usuario">Usuario</label>
            </div>
            <div class="input-group">
                <input type="password" name="contraseña" id="contraseña">
                <label for="contraseña">Contraseña</label>
            </div>
            <input type="submit" value="Ingresar" class="submit-btn">
            <div class="registro">
                <a href="~/Registro/RegistrarCliente">¿No tienes una cuenta? Registrate aqui</a>
            </div>
            <!--</form>-->
        }
    </div>
</body>
</html>
