@model IEnumerable<Sistema_Veterinaria.Models.Pedidos>

<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/menu.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/all.js"></script>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/all.js"></script>
</head>
<body>
    <nav class="navbar">
        <div class="content" style="margin-right: 25rem;">
            <img class="logo" src="~/img/patas-logo.png" />

            <ul class="menu-list">

                <div class="icon cancel-btn">
                    <i class="fas fa-times"></i>
                </div>

                <li><a href="#">Quienes Somos</a></li>
                <li><a href="#">Especialidades</a></li>
                <li><a href="#">Servicios</a></li>
                <li><a href="/Tienda">Tienda</a></li>
                @if (Session["nombre"] != null || Session["apellido"] != null)
                {
                    <li><a href="Pedidos">Pedidos</a></li>
                }
                <li>
                    @if (Session["nombre"] == null || Session["apellido"] == null)
                    {
                        <a href="~/Login/validacion">Iniciar Sesion</a>
                    }
                    else
                    {
                        <a href="#">@Session["nombre"] @Session["apellido"]</a>
                    }
                </li>

            </ul>
            <div class="icon menu-btn" ">
                <i class="fas fa-bars"></i>
            </div>

        </div>
    </nav>
    @*<div class="banner"></div>*@
    <div id="container" class="div-container">
        <div style="padding: 10px;">
            <div class="row">
                <div class="col-md-12 row">
                    <!-- <h3 style="margin: 2px 20px;">Candidatos:</h3> -->
                    @*<button type="button" class="btn btn-primary ml-auto" data-toggle="modal" data-target="#modal_agregar_cliente">Agregar Clientes</button>*@
                    <!--<a class="btn btn-light ml-2" data-toggle="modal" data-target="#modal_publicar" onclick="btnPublicar()" ><i class="fas fa-sign-out-alt"></i></a>-->
                </div>
            </div>

            <hr>

            <h3>Pedidos:</h3>

            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <div id="tabla_candidatos">
                            <table id="tblCandidatos" data-toggle="table" data-pagination="true" data-page-list="[10,15]" data-click-to-select="true" data-search="true" class="table table-bordered table-hover table-condensed">
                                <thead class="thead-dark">
                                    <tr>

                                        <th style="display: none;"></th>
                                        <th style="">Usuario</th>
                                        <th>Fecha</th>
                                        <th>Total</th>
                                        <th>Estado</th>
                                        <th>Direccion</th>
                                        <th>Informacion Adicional</th>
                                        <th>Correo</th>
                                        <th>Telefono</th>
                                        <th style=""></th>
                                    </tr>
                                </thead>
                                <tbody id="tablaCandidatos">

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="display: none;">@item.codigo</td>
                                            <td>@Session["nombre"] @Session["Apellido"] </td>
                                            <td>@item.fecha</td>
                                            <td>@item.total</td>
                                            <td>Pendiente</td>
                                            <td>@item.direccion</td>
                                            <td>@item.informacion</td>
                                            <td>@item.correo</td>
                                            <td>@item.telefono</td>

                                            <td>
                                                <a class="btn btn-warning ml-3" id="btnTracking" data-toggle="modal" data-target="#mostrarmodal"><i class="fas fa-edit"></i></a>
                                                @*<a href="@Url.Action("EliminarCliente", "Registro", new { cod=item.codigo })" class="btn btn-danger" onclick=0"return btnEliminar()"><i class="fas fa-trash-alt"></i></a>*@
                                                <!--<a class="btn btn-light" data-toggle="modal" data-target="#modal_publicar" onclick=""><i class="fas fa-sign-out-alt"></i></a>-->
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*<script src="~/Scripts/main.js"></script>*@

</body>
</html>

<!-- Mensaje de votacion -->
<div class="modal fade" id="mostrarmodal" role="dialog">
    <div class="modal-dialog modal-dialog-centered mt-2">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-center">
                <h4 class="modal-title">¡Aviso!</h4>
            </div>

            <div class="modal-body d-flex justify-content-center">
                <h5 class="text-center">Su pedido esta siendo procesado<br>Estado: Pendiente</h5>
            </div>

            <div class="modal-footer">
                <a href="" data-dismiss="modal" class="btn btn-danger d-block mx-auto" id="btnCerrar">Cerrar</a>
            </div>
        </div>
    </div>
</div>
<!--------->