@model IEnumerable<Sistema_Veterinaria.Models.Mascota>

<div>
    <div class="row">
        <div class="col-md-12 row">
            <!-- <h3 style="margin: 2px 20px;">Candidatos:</h3> -->

            <button type="button" class="btn btn-primary ml-auto" data-toggle="modal" data-target="#modal_agregar_mascota">Agregar Mascotas</button>
            <!--<a class="btn btn-light ml-2" data-toggle="modal" data-target="#modal_publicar" onclick="btnPublicar()" ><i class="fas fa-sign-out-alt"></i></a>-->
        </div>
    </div>

    <hr>

    <h3>Mascotas:</h3>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <div id="tabla_candidatos">
                    <table id="tblCandidatos" data-toggle="table" data-pagination="true" data-page-list="[10,15]" data-click-to-select="true" data-search="true" class="table table-bordered table-hover table-condensed">
                        <thead class="thead-dark">
                            <tr>

                                <th style="display: none;"></th>
                                <th style="">Nombre</th>
                                <th>Especie</th>
                                <th>Raza</th>
                                <th>Edad</th>
                                <th>Sexo</th>
                                <th>Fecha de Nacimiento</th>
                                <th style="">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="tablaCandidatos">

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="display: none;">@item.codigo</td>
                                    <td>@item.nombre</td>
                                    <td>@item.especie</td>
                                    <td id="imagen">@item.raza
                                    <!--<div class="grid">
                                        <img src="" style="width: 50px;" onclick="mostrarimg(this);">
                                    </div>-->
                                    </td>
                                    <td>@item.edad</td>
                                    <td>@item.sexo</td>
                                    <td>@item.fechanacimiento</td>
                                    <td>
                                        <a class="btn btn-warning ml-3" id="btnEditarMascota" data-toggle="modal" data-target="#modal_modificar_mascota"><i class="fas fa-edit"></i></a>
                                        <a href="@Url.Action("EliminarMascota", "Registro", new { cod=item.codigo })" class="btn btn-danger" onclick="return btnEliminar()"><i class="fas fa-trash-alt"></i></a>
                                        <!--<a class="btn btn-light" data-toggle="modal" data-target="#modal_publicar" onclick=""><i class="fas fa-sign-out-alt"></i></a>-->
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


